[placeholder]:empty::before 
  content attr(placeholder)
  color #7bF

[my-colname=annio]
  .number-separator
    display none

.paper-principal
  height 100vh
  display flex
  flex-direction column
  overflow-y hidden

.app-bar-bg
.accordion-bg
  background-size auto 100%

.link-manual
  color inherit
  text-decoration none
  flex-direction row
  display flex
  gap 5px

.accordion-summary
  flex-direction row-reverse
  & .MuiAccordionSummary-content
    margin-left 16px

.my-grid td[my-colname*=nombre_sector]
  max-width 40em

div.fp-fieldname-idper
  width 12em

div.fp-fieldname-cod_novedades__novedad
  width 40em

label.fp-fieldname-dds1
  margin-left 2em

.MuiAutocomplete-root  
  display inline-flex

div.calendario-mes
  margin 2em

div.calendario-semana
  display flex
  flex-direction row

div.calendario-dia, div.calendario-nombre-dia
  display flex
  flex-direction column
  width 4em
  height 4em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 2px

div.calendario-nombre-dia
  align-content center
  align-self center
  height 1em
  text-align center

span.calendario-dia-numero
  font-size 80%

span.calendario-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

div.tipo-dia-no-laborable
  background-color #dfdddd

div.tipo-dia-no-trabaja
  background-color #ED9

div.tipo-dia-trabaja
  background-color rgb(62, 249, 0)

div.calendario-dia-seleccionado, div.seleccionado
  &:hover
    background-color #eee488
  background-color #fff4aa
  font-weight bold
  &.tipo-dia-no-laborable
    background-color #ccc488

.calendario-extendido-mes
  margin 2em
  padding 1em

.calendario-extendido-grid
  display grid
  grid-template-columns repeat(7, 1fr)
  gap 0.5px

.calendario-extendido-header
  display grid
  grid-template-columns repeat(7, 1fr)
  text-align center
  background-color #f5f5f5
  font-weight bold
  padding 0.5em

.calendario-extendido-semana
  display contents

.calendario-extendido-dia, .calendario-extendido-nombre-dia
  display flex
  flex-direction column
  justify-content space-between
  border 1px solid #e0e0e0
  width 100%
  height 100px
  padding 4px
  background-color #fff
  transition background-color 0.3s ease
  cursor pointer

.calendario-extendido-dia:hover
  background-color #f0f0f0

.calendario-extendido-dia-seleccionado
  background-color #ffcc00
  border-color #ffa500

.calendario-extendido-dia-numero
  font-size 80%
  align-self flex-start

.calendario-extendido-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

.tipo-dia-no-laborable
  background-color #dfdddd

.tipo-dia-no-trabaja
  background-color #ed9

.calendario-extendido-dia-numero, .calendario-extendido-dia-contenido
  font-size 70%

.box-flex-gap
  display: flex
  gap: 1rem

.paper-flex
  flex: 2

.box-flex
  flex: 1

div.box-line
  display flex
  flex-direction row

span.box-id
  font-size 90%
  font-weight bold
  min-width 3.5em

span.box-names
  flex-grow 2

span.box-names[red-color=si], 
td[red-color=si],
.legajo-valor[red-color=si]
  color #FF0000
  font-weight bold

span.box-info
  font-size 90%
  font-weight bold
  min-width 3.5em

.error-valor
  background-color #FAA

.componente-horario
  min-width 24em

.componente-datos-personales
  min-width 24em

.componente-calendario-mes
  min-width 32em  

.componente-novedades-registradas
  min-width 28em  

.componente-lista-personas
  min-width 500px
  bottom 0px

.componente-persona
  & > *
    margin 2em
  display flex
  flex-direction column
  flex-wrap wrap
  align-content space-between

.componente-pantalla-1
  position relative
  display flex
  height calc(100vh - 64px)
  gap 2em

.componente-codigo-novedades
  min-width 24em
  bottom 0px

.componente-legajo-per
  min-width 28em
  margin-bottom 1em

.legajo-contenedor
  display flex
  flex-direction column
  gap 0.8em
  padding 0.5em

.legajo-seccion
  border-left 3px solid #e0e0e0
  padding-left 0.6em

.legajo-seccion-titulo
  font-weight bold
  color #444
  margin-bottom 0.3em

.legajo-grupo
  display flex
  flex-direction row
  flex-wrap wrap
  gap 0.5em 1em
  margin-bottom 0.5em

.legajo-campo
  display flex
  flex-direction row
  align-items center
  min-width 12em

.legajo-campo-largo
  flex-basis 100%

.legajo-etiqueta
  font-weight bold
  color #666
  margin-right 0.5em
  min-width 5em

.deshabilitado
  opacity 0.5
  pointer-events none

.horario-vigente
  text-align center
  margin-bottom 1em

.horario-contenedor
  display flex
  align-items flex-start
  flex-direction column

.horario-dia
  display flex
  flex-direction column
  width 4em
  height 2.5em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 2px
  text-align center

.vacaciones-contenedor
  display flex
  align-items flex-start
  flex-direction column

.vacaciones-renglon
  display flex
  font-size 0.8em
  font-weight bold
  flex-direction row
  text-align center

.vacaciones-celda
  display flex
  flex-direction column
  width 2.6em
  height 1.3em
  font-weight normal
  font-size 1em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 1px
  padding-right 3px
  text-align right

.vacaciones-titulo
  display flex
  flex-direction column
  width 2.6em
  height 1.3em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 2px

.search-box
  padding-left 0.7em
  display flex
  align-items center
  width 100%

.componente-del-medio
  padding-bottom 1em
  min-width 470px 
  flex-direction column
  top 0px

.container-del-medio
  display flex
  padding-top 1em
  padding-bottom 1em
  flex-direction column
  gap 2em
  top 0px

.novedades-detalles
  width 100%
  max-width 32em

div.horario-renglon
  display flex
  flex-direction row

.my-grid td[my-colname=capacitacion]
  max-width 50em

.prioridad_no
  color #620
  font-weight bold

.prioridad_si
  color #040
  font-style italic

selector-normal()
  margin 3px
  div
    padding-top 7px
    padding-bottom 7px

div.selector-mes
  width 8em
  selector-normal()

div.selector-annio
  selector-normal()

boton-normal()
  margin 3px

button.es-hoy-si
  boton-normal()
  font-weight bold

button.es-hoy-no
  boton-normal()

div.no-seleccionable
  color #666

button.boton-confirmar-registro-novedades
  max-width 32em

.siper-button[boton-negro = si]
  color #000

div.novedades-renglon
  display flex
  flex-direction row
  justify-content space-between
  min-height 2em
  align-items center
  &:hover
    background-color #f0f0f0
  .fechas
    width 7em
    text-align center
  .cod_nov
    width 3em
    text-align center
  .razones
    flex 3 3
  .borrar
    button
      min-width 1em
  &.ultima-novedad
    background-color: #ffffff

.por-borrar
  text-decoration line-through
  color #800    

.dia-programado-checkbox-container
  display: flex
  align-items: center
  padding: 0.5rem 0
  flex-wrap: nowrap
  justify-content: space-between

.dia-programado-checkbox-label
  display: flex
  align-items: center
  font-size: 0.9rem

.dia-programado-checkbox-separator
  color: gray

div[role=dialog]
  padding 1em
  button
    margin 1em

[siper-esEfimero=si]
  opacity 0.5

.componente-lista-personas[siper-esScrollable=si]
.componente-codigo-novedades[siper-esScrollable=si]
.componente-del-medio[siper-esScrollable=si]
  overflow-y auto

[hoy-signo-de]
  visibility hidden
  padding-left 0.2em
  padding-right 0.2em
[es-este-mes="no-futuro"]
  [hoy-signo-de="futuro"]
    visibility visible
[es-este-mes="no-pasado"]
  [hoy-signo-de="pasado"]
    visibility visible
button[es-este-mes]
  padding-left 0.3em
  padding-right 0.3em
  margin 0.3em
  border 0.5px solid #ccc
  color #444
  &:hover
    border 0.5px solid #444
    color black

.box-info
  text-align center
  &[con-info-nov=si]
    display flex
  [con-info-nov]
    display inline-block
    font-weight normal
    font-size 90%
    border 0.5px dashed transparent
    padding-left 2px
    padding-right 2px
  [con-info-nov=usados]
    border 0.5px dashed #ccc
    min-width 1em
  [con-info-nov=pendientes]
    border 0.5px dashed #ccc
    min-width 1em
  
.check-box[sin-padding=si]
  color #000
  padding 0

@media print 
  .menu-item
    display none

[bold-name=si]
  font-weight bold