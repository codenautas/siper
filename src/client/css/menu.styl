 @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap')
$font-primary = 'Montserrat', sans-serif

@import url('https://cdn.materialdesignicons.com/7.0.96/css/materialdesignicons.min.css')

[placeholder]:empty::before 
  content attr(placeholder)
  color #7bF

[my-colname=annio]
  .number-separator
    display none

span.mdi 
  font-size 1.4rem
  margin-right 10px
  color #252663

.titulo-componente
  font-family $font-primary
  font-weight 600
  line-height 1.6
  font-size 1.2rem
  margin 0 0 20px 0

.my-grid td[my-colname*=nombre_sector]
  max-width 40em

div.fp-fieldname-idper
  width 12em

div.fp-fieldname-cod_novedades__novedad
  width 40em

label.fp-fieldname-dds1
  margin-left 2em

.MuiAutocomplete-root  
  display inline-flex

.selectores
  margin-right 10px  

div.calendario-mes
  margin 2em

div.calendario-semana
  display flex
  flex-direction row

div.calendario-dia, div.calendario-nombre-dia
  display flex
  flex-direction column
  width 4em
  height 4em
  border-bottom 0.5px solid #b1b4c4
  border-right 0.5px solid #b1b4c4
  padding 2px

div.calendario-nombre-dia
  align-content center
  align-self center
  height 1.2rem
  text-align center
  color #252663
  

span.calendario-dia-numero
  font-size 80%

span.calendario-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

div.tipo-dia-no-laborable
  background-color #ECC

div.tipo-dia-no-trabaja
  background-color #ED9

div.calendario-dia-seleccionado, div.seleccionado
  &:hover
    background-color #A7C5EF
  background-color #DFE9FC
  font-weight bold

.calendario-extendido-mes
  margin 2em
  padding 1em

.calendario-extendido-grid
  display grid
  grid-template-columns repeat(7, 1fr)
  gap 0.5px

.calendario-extendido-header
  display grid
  grid-template-columns repeat(7, 1fr)
  text-align center
  background-color #f5f5f5
  font-weight bold
  padding 0.5em

.calendario-extendido-semana
  display contents

.calendario-extendido-dia, .calendario-extendido-nombre-dia
  display flex
  flex-direction column
  justify-content space-between
  border 1px solid #e0e0e0
  width 100%
  height 100px
  padding 4px
  background-color #fff
  transition background-color 0.3s ease
  cursor pointer

.calendario-extendido-dia:hover
  background-color #f0f0f0

.calendario-extendido-dia-seleccionado
  background-color #ffcc00
  border-color #ffa500

.calendario-extendido-dia-numero
  font-size 80%
  align-self flex-start

.calendario-extendido-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

.tipo-dia-no-laborable
  background-color #ecc

.tipo-dia-no-trabaja
  background-color #ed9

@media (max-width: 600px)
  .calendario-extendido-dia
    height 60px

.calendario-extendido-dia-numero, .calendario-extendido-dia-contenido
  font-size 70%

div.box-line
  display flex
  flex-direction row

span.box-id
  font-size 0.8rem
  font-weight bold
  margin-right: 12px
  color #252663

span.box-names
  font-weight bold
  color #252663

.error-valor
  background-color #FAA

.componente-horario
  min-width 24em

.componente-datos-personales
  min-width 24em

.componente-calendario-mes
  min-width 32em  

.componente-novedades-registradas
  min-width 28em  

.componente-lista-personas
  min-width 500px

.componente-persona
  & > *
    margin 2em
  display flex
  flex-direction column
  flex-wrap wrap
  align-content space-between  

.componente-pantalla-1
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 2%
  margin-left auto
  margin-right auto
  @media (max-width: 960px)
      grid-template-columns: repeat(2, 1fr)
  @media (max-width: 600px)
      grid-template-columns: repeat(1, 1fr)  

.componente-codigo-novedades
  min-width 24em

.contenedores-paper
  padding 22px

.deshabilitado
  opacity: 0.5
  pointer-events: none

.horario-vigente
    text-align: center
    font-weight: bold
    margin-bottom: 1em

.horario-contenedor
    display: flex
    justify-content: space-around
    align-items: flex-start

.horario-dia
    font-weight: bold
    margin-bottom: 0.5em


.item-novedad
  display flex

.item-cod
  min-width 30px 
  margin-right 10px
  font-weight bold
  
   