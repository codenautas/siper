
[placeholder]:empty::before 
  content attr(placeholder)
  color #7bF

[my-colname=annio]
  .number-separator
    display none

.my-grid td[my-colname*=nombre_sector]
  max-width 40em

div.fp-fieldname-idper
  width 12em

div.fp-fieldname-cod_novedades__novedad
  width 40em

label.fp-fieldname-dds1
  margin-left 2em

.MuiAutocomplete-root  
  display inline-flex

div.calendario-mes
  margin 2em

div.calendario-semana
  display flex
  flex-direction row

div.calendario-dia, div.calendario-nombre-dia
  display flex
  flex-direction column
  width 4em
  height 4em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 2px

div.calendario-nombre-dia
  align-content center
  align-self center
  height 1em
  text-align center

span.calendario-dia-numero
  font-size 80%

span.calendario-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

div.tipo-dia-no-laborable
  background-color #ECC

div.tipo-dia-no-trabaja
  background-color #ED9

div.calendario-dia-seleccionado, div.seleccionado
  &:hover
    background-color #eee488
  background-color #fff4aa
  font-weight bold

.calendario-extendido-mes
  margin 2em
  padding 1em

.calendario-extendido-grid
  display grid
  grid-template-columns repeat(7, 1fr)
  gap 0.5px

.calendario-extendido-header
  display grid
  grid-template-columns repeat(7, 1fr)
  text-align center
  background-color #f5f5f5
  font-weight bold
  padding 0.5em

.calendario-extendido-semana
  display contents

.calendario-extendido-dia, .calendario-extendido-nombre-dia
  display flex
  flex-direction column
  justify-content space-between
  border 1px solid #e0e0e0
  width 100%
  height 100px
  padding 4px
  background-color #fff
  transition background-color 0.3s ease
  cursor pointer

.calendario-extendido-dia:hover
  background-color #f0f0f0

.calendario-extendido-dia-seleccionado
  background-color #ffcc00
  border-color #ffa500

.calendario-extendido-dia-numero
  font-size 80%
  align-self flex-start

.calendario-extendido-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

.tipo-dia-no-laborable
  background-color #ecc

.tipo-dia-no-trabaja
  background-color #ed9

@media (max-width: 600px)
  .calendario-extendido-dia
    height 60px

.calendario-extendido-dia-numero, .calendario-extendido-dia-contenido
  font-size 70%


.appbar
  width 60px !important
  height 100vh !important
  left 0 !important
  top 0 !important
  flex-direction column !important
  justify-content flex-start !important
  align-items center !important

.toolbar
  display flex !important
  flex-direction column !important
  align-items center !important
  padding-top 16px !important
  padding-bottom 16px !important
  height 100% !important

span.box-id
  font-size 90%
  font-weight bold
  min-width 3.5em

.error-valor
  background-color #FAA

.componente-horario
  min-width 24em

.componente-datos-personales
  min-width 24em

.componente-calendario-mes
  min-width 32em  

.componente-novedades-registradas
  min-width 28em  

.componente-lista-personas
  min-width 500px

.componente-persona
  & > *
    margin 2em
  display flex
  flex-direction column
  flex-wrap wrap
  align-content space-between

.componente-pantalla-1
  display flex

.componente-codigo-novedades
  min-width 24em
