 @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap')
$font-primary = 'Montserrat', sans-serif

@import url('https://cdn.materialdesignicons.com/7.0.96/css/materialdesignicons.min.css')

[placeholder]:empty::before 
  content attr(placeholder)
  color #7bF

[my-colname=annio]
  .number-separator
    display none

span.mdi 
  font-size 1.4rem
  margin-right 10px
  color #252663

.titulo-componente
  font-family $font-primary
  font-weight 600
  line-height 1.6
  font-size 1.2rem
  margin 0 0 20px 0

.titulo-componente-descripcion
  margin 0 0 0px 0
  font-family $font-primary
  font-weight 600
  line-height 1.6
  font-size 1.2rem

.my-grid td[my-colname*=nombre_sector]
  max-width 40em

div.fp-fieldname-idper
  width 12em

div.fp-fieldname-cod_novedades__novedad
  width 40em

label.fp-fieldname-dds1
  margin-left 2em

.MuiAutocomplete-root  
  display inline-flex

.selectores
  margin-right 10px  

div.calendario-mes
  margin 2em

div.calendario-semana
  display flex
  flex-direction row
  justify-content center

div.calendario-dia, div.calendario-nombre-dia
  display flex
  flex-direction column
  width 4em
  height 4em
  border-bottom 0.5px solid #e0e0e4
  border-right 0.5px solid #e0e0e4
  border-left 0.5px solid #e0e0e4
  padding 2px

div.calendario-nombre-dia
  align-content center
  align-self center
  height 1.2rem
  text-align center
  color #252663
  

span.calendario-dia-numero
  font-size 80%

span.calendario-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

div.tipo-dia-no-laborable
  background-color #f5f5f5

div.tipo-dia-no-trabaja
  background-color #ED9

div.tipo-dia-trabaja
  background-color rgb(62, 249, 0)

div.calendario-dia-seleccionado, div.seleccionado
  &:hover
    background-color #A7C5EF
  background-color #DFE9FC
  font-weight bold

.calendario-extendido-mes
  margin 2em
  padding 1em

.calendario-extendido-grid
  display grid
  grid-template-columns repeat(7, 1fr)
  gap 0.5px

.calendario-extendido-header
  display grid
  grid-template-columns repeat(7, 1fr)
  text-align center
  background-color #f5f5f5
  font-weight bold
  padding 0.5em

.calendario-extendido-semana
  display contents

.calendario-extendido-dia, .calendario-extendido-nombre-dia
  display flex
  flex-direction column
  justify-content space-between
  border 1px solid #e0e0e0
  width 100%
  height 100px
  padding 4px
  background-color #fff
  transition background-color 0.3s ease
  cursor pointer

.calendario-extendido-dia:hover
  background-color #f0f0f0

.calendario-extendido-dia-seleccionado
  background-color #ffcc00
  border-color #ffa500

.calendario-extendido-dia-numero
  font-size 80%
  align-self flex-start

.calendario-extendido-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

.tipo-dia-no-laborable
  background-color #ecc

.tipo-dia-no-trabaja
  background-color #ed9

.calendario-extendido-dia-numero, .calendario-extendido-dia-contenido
  font-size 70%

div.box-line
  display flex
  flex-direction row

span.box-id
  font-size 0.8rem
  font-weight bold
  margin-right: 12px
  color #252663

span.box-names
  font-weight bold
  color #252663

.error-valor
  background-color #FAA

.componente-horario
  min-width 24em

.componente-datos-personales
  min-width 24em

.componente-calendario-mes
  min-width 32em  

.componente-novedades-registradas
  min-width 28em  

.componente-lista-personas
  min-width 500px

.componente-persona
  & > *
    margin 2em
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 2%
  align-content space-between  

.componente-pantalla-1
  display grid
  grid-template-columns repeat(3, 1fr)
  gap 2%
  margin-left auto
  margin-right auto
  @media (max-width: 960px)
      grid-template-columns: repeat(2, 1fr)
  @media (max-width: 600px)
      grid-template-columns: repeat(1, 1fr)  

.componente-codigo-novedades
  min-width 24em

.contenedores-paper
  padding 22px

.deshabilitado
  opacity 0.5
  pointer-events none

.horario-vigente
  text-align center
  margin-bottom 1em

.horario-contenedor
  display flex
  align-items flex-start
  flex-direction column

.horario-dia
  display flex
  flex-direction column
  width 4em
  height 2.5em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 2px
  text-align center
  font-weight: bold
  margin-bottom: 0.5em
  
.search-box
  padding-left 0.7em

.componente-del-medio
  min-width 470px
  display flex
  flex-direction column
  gap 2em  

.novedades-detalles
  width 100%
  max-width 32em

div.horario-renglon
  display flex
  flex-direction row

.my-grid td[my-colname=capacitacion]
  max-width 50em

.con_novedad_si
  color #620
  font-weight bold

.con_novedad_no
  color #040
  font-style italic

selector-normal()
  margin 3px
  div
    padding-top 7px
    padding-bottom 7px

div.selector-mes
  width 8em
  selector-normal()

div.selector-annio
  selector-normal()

boton-normal()
  margin 3px

button.es-hoy-si
  boton-normal()
  font-weight bold

button.es-hoy-no
  boton-normal()

div.no-seleccionable
  color #666

button.boton-confirmar-registro-novedades
  max-width 32em  

div.novedades-renglon
  display flex
  flex-direction row
  justify-content space-between
  min-height 2em
  align-items center
  &:hover
    background-color #f0f0f0
  .fechas
    width 6em
    text-align center
  .cod_nov
    width 3em
    text-align center
  .razones
    flex-grow 2
  .borrar
    button
      min-width 1em
  &.ultima-novedad
    background-color: #ffffff

.por-borrar
  text-decoration line-through
  color #800 

.item-novedad
  display flex

.item-cod
  min-width 30px 
  margin-right 10px
  font-weight bold