
[placeholder]:empty::before 
  content attr(placeholder)
  color #7bF

[my-colname=annio]
  .number-separator
    display none

.my-grid td[my-colname*=nombre_sector]
  max-width 40em

div.fp-fieldname-idper
  width 12em

div.fp-fieldname-cod_novedades__novedad
  width 40em

label.fp-fieldname-dds1
  margin-left 2em

.MuiAutocomplete-root  
  display inline-flex

div.calendario-mes
  margin 2em

div.calendario-semana
  display flex
  flex-direction row

div.calendario-dia, div.calendario-nombre-dia
  display flex
  flex-direction column
  width 4em
  height 4em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 2px

div.calendario-nombre-dia
  align-content center
  align-self center
  height 1em
  text-align center

span.calendario-dia-numero
  font-size 80%

span.calendario-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

div.tipo-dia-no-laborable
  background-color #ECC

div.tipo-dia-no-trabaja
  background-color #ED9

div.tipo-dia-trabaja
  background-color rgb(62, 249, 0)

div.calendario-dia-seleccionado, div.seleccionado
  &:hover
    background-color #eee488
  background-color #fff4aa
  font-weight bold

.calendario-extendido-mes
  margin 2em
  padding 1em

.calendario-extendido-grid
  display grid
  grid-template-columns repeat(7, 1fr)
  gap 0.5px

.calendario-extendido-header
  display grid
  grid-template-columns repeat(7, 1fr)
  text-align center
  background-color #f5f5f5
  font-weight bold
  padding 0.5em

.calendario-extendido-semana
  display contents

.calendario-extendido-dia, .calendario-extendido-nombre-dia
  display flex
  flex-direction column
  justify-content space-between
  border 1px solid #e0e0e0
  width 100%
  height 100px
  padding 4px
  background-color #fff
  transition background-color 0.3s ease
  cursor pointer

.calendario-extendido-dia:hover
  background-color #f0f0f0

.calendario-extendido-dia-seleccionado
  background-color #ffcc00
  border-color #ffa500

.calendario-extendido-dia-numero
  font-size 80%
  align-self flex-start

.calendario-extendido-dia-contenido
  font-size 120%
  margin-top 0.5em
  align-self center

.tipo-dia-no-laborable
  background-color #ecc

.tipo-dia-no-trabaja
  background-color #ed9

.calendario-extendido-dia-numero, .calendario-extendido-dia-contenido
  font-size 70%

div.box-line
  display flex
  flex-direction row

span.box-id
  font-size 90%
  font-weight bold
  min-width 3.5em

span.box-names
  flex-grow 2

span.box-info
  font-size 90%
  font-weight bold
  min-width 3.5em

.error-valor
  background-color #FAA

.componente-horario
  min-width 24em

.componente-datos-personales
  min-width 24em

.componente-calendario-mes
  min-width 32em  

.componente-novedades-registradas
  min-width 28em  

.componente-lista-personas
  min-width 500px

.componente-persona
  & > *
    margin 2em
  display flex
  flex-direction column
  flex-wrap wrap
  align-content space-between

.componente-pantalla-1
  display flex
  gap 2em

.componente-codigo-novedades
  min-width 24em

.deshabilitado
  opacity 0.5
  pointer-events none

.horario-vigente
  text-align center
  margin-bottom 1em

.horario-contenedor
  display flex
  align-items flex-start
  flex-direction column

.horario-dia
  display flex
  flex-direction column
  width 4em
  height 2.5em
  border-bottom 0.5px dotted gray
  border-right 0.5px dotted gray
  padding 2px
  text-align center

.search-box
  padding-left 0.7em

.componente-del-medio
  min-width 470px
  display flex
  flex-direction column
  gap 2em  

.novedades-detalles
  width 100%  

div.horario-renglon
  display flex
  flex-direction row

.my-grid td[my-colname=capacitacion]
  max-width 50em

.con_novedad_si
  color #620
  font-weight bold

.con_novedad_no
  color #040
  font-style italic

